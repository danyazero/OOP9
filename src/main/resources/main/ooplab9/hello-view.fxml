<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.AnchorPane?>
<VBox alignment="CENTER" prefHeight="250.0" prefWidth="500.0" spacing="20.0"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="main.ooplab9.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <AnchorPane prefHeight="200.0" prefWidth="425.0">
            <Label layoutX="14.0" layoutY="14.0" text="Start" />
            <TextField fx:id="startField" layoutX="60.0" layoutY="10.0" />
            <Label layoutX="14.0" layoutY="49.0" text="Finish" />
            <TextField fx:id="finishField" layoutX="60.0" layoutY="45.0" />
            <Label layoutX="14.0" layoutY="83.0" text="Step" />
            <TextField fx:id="stepField" layoutX="60.0" layoutY="80.0" />
            <Button layoutX="14.0" layoutY="115.0" mnemonicParsing="false"
                    onAction="#tabulation" prefHeight="25.0" prefWidth="215.0"
                    text="Табулювати! " />
            <TextArea fx:id="resultView" layoutX="250.0" layoutY="13.0"
                      maxHeight="200" maxWidth="250" AnchorPane.bottomAnchor="14.0"
                      AnchorPane.leftAnchor="250.0" AnchorPane.rightAnchor="0.0"
                      AnchorPane.topAnchor="13.0">
                <font>
                    <Font name="Courier New" size="18.0" />
                </font></TextArea>
    </AnchorPane>
</VBox>

